{
  "manifest_version": 3,
  "name": "POW Capstone Extension",
  "description": "Don't get hooked! Take control of your email security by manually triggering scans for phishing risks directly in Outlook.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "POW Capstone Extension, Click to scan."
  },
  "icons": {
    "16": "/icon16.png",
    "32": "/icon32.png",
    "48": "/icon48.png",
    "128": "/icon128.png"
  },
  "host_permissions": [
    "https://outlook.office.com//*",
    "https://outlook.live.com/*",
    "https://localhost:8000/*"
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://outlook.office.com//*",
        "https://outlook.live.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}